{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "TS-Node",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node",
            "runtimeArgs": [
                "--transpile-only"
            ],
            "program": "${workspaceRoot}/src/index.ts",
            "cwd": "${workspaceRoot}",
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**",
                "<node_internals>/**/*.js"
            ],
            "console": "integratedTerminal"
        }
    ]
}